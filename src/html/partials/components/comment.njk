{% for comment in comments %}
<div class="blog-comment {{comment.comment_type}}" id="blog-comment-{{comment.ID}}">
	<h5 class="comment-author">{{comment.author.name}} says</h5>
	{# <div class="comment-content">{{comment.comment_content|wpautop}}</div> 1. *MB.mbfw* #}
	<div class="comment-content">{{comment.comment_content}}</div> {# 1. *MB.pro* #}

	<section class="comment-box">
		<!-- child comments -->
		{% if post.comments %}
			<h4> replies </h4>
			<div class="comments">
				{% for child in comment.children %}
				{#% include "comment.njk" with {comment:cmt} 2. *MB.mbfw* %#}
				<div class="blog-comment {{child.comment_type}}" id="blog-comment-{{child.ID}}"> {# 2. *MB.pro* #}
				<h5 class="comment-author">{{child.author.name}} says</h5> {# 2. *MB.pro* #}
				<div class="comment-content">{{child.comment_content}}</div> {# 2. *MB.pro* #}
				{% endfor %}
			</div>
		{% endif %}
		<!-- comment form -->
	</section>
</div>
{% endfor %}
